{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "mocha test/**/*.js --exit",
    "start": "DEBUG=express:*,app:* nodemon index",
    "debug": "DEBUG=express:*,app:* yarn start",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "coverage": "nyc yarn test",
    "report": "nyc report --reporter=html && open coverage/index.html",
    "inspect": "DEBUG=express:*,app:* nodemon --inspect index"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kateMoscoso/node-api.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kateMoscoso/node-api/issues"
  },
  "homepage": "https://github.com/kateMoscoso/node-api#readme",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.5.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.0.15",
    "jquery": "^3.5.1",
    "mongodb": "^3.5.9",
    "mongoose": "^5.9.22",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemon": "^2.0.4",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.21.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500",
    "env": {
      "NODE_ENV": "development",
      "PORT": 3000
    },
    "nyc": {
      "all": true,
      "include": [
        "routes",
        "services",
        "lib",
        "utils"
      ]
    }
  }
}
